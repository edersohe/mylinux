#!/usr/bin/env bash

export EDITOR=nvim
export VISUAL=nvim
export TERM=xterm-termite
export PAGER="bat -p"
export BAT_PAGER="less -RFXI"
export BAT_THEME="Nord"
export MANPAGER=bat-man-pager
export PATH=$HOME/.scripts:$HOME/go/bin:$HOME/.local/bin:$PATH
export GO111MODULE="on"

[[ -f "$HOME/.cargo/env" ]] && . $HOME/.cargo/env

eval "$(starship init bash)"

alias ls="exa -G --color always --icons -a -s type"
alias ll="exa -l --color always --icons -a -s type -g -h"
alias lg="lazygit"
alias cat="bat -pp"


#!/bin/sh

export EDITOR=nvim
export VISUAL=nvim
export TERM=xterm-kitty
export TERMINAL=kitty
export PAGER="bat -p"
export BAT_PAGER="less -RFXI"
export PATH=$HOME/go/bin:$HOME/.local/bin:$PATH
export DMENU_OPTS="-i -fn \"NotoSans Nerd Font:size=10\" -nb \"#3B4252\" -nf \"#B0B5BD\" -sb \"#81A1C1\" -sf \"#2E3440\""

if [ -n "$SWAYSOCK" ] && command -v swaymsg >/dev/null; then
    export MSG_PROGRAM='swaymsg'
elif [ -n "$I3SOCK" ] && command -v i3-msg >/dev/null; then
	export MSG_PROGRAM='i3-msg'
fi

eval "$(starship init bash)"

alias ls="exa -G --color always --icons -a -s type"
alias ll="exa -l --color always --icons -a -s type "
alias lg="lazygit"
alias cat="bat -pp"


#!/bin/sh

export EDITOR=nvim
export VISUAL=nvim
export TERM=xterm-kitty
export TERMINAL=kitty
export PATH=$HOME/go/bin:$HOME/.local/bin:$PATH

if [ -n "$SWAYSOCK" ] && command -v swaymsg >/dev/null; then
    export MSG_PROGRAM='swaymsg'
elif [ -n "$I3SOCK" ] && command -v i3-msg >/dev/null; then
	export MSG_PROGRAM='i3-msg'
fi

eval "$(starship init bash)"

alias cat="bat --color=always --plain --paging=never"
alias ls="exa -ls name"
alias ll="ls"
alias lg="lazygit"
alias vim="nvim"
alias vimdiff="nvim -d"


DMENU_OPTS="-b -i -fn \"NotoSans Nerd Font:size=10\""

alias dmenu="dmenu $DMENU_OPTS"
alias dmenu_run="dmenu_run $DMENU_OPTS"
alias j4-dmenu-desktop="j4-dmenu-desktop --dmenu='dmenu $DMENU_OPTS' --no-generic --display-binary"

